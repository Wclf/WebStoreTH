@model WebTH.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Profile";
}
<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15"
         style="background-image: url(/Content/assets/images/bg-title-page-2.jpg)">
    <h2 class="tit6 t-center">Thông tin cá nhân</h2>
</section>

<style>
    .profile {
        margin: 24px;
    }
</style>

<div class="container section-gallery">
    <div class="row">
        <div class="col-md-12 profile">

            @using (Html.BeginForm("PostProfile", "Account"))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="exampleInputEmail1">Họ và tên</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Fullname" value="@Model.FullName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Tên tài khoản</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="UserName" value="@Model.UserName" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Số điện thoại</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Phone" value="@Model.Phone">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Email" value="@Model.Email" readonly>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Cập nhật</button>
                </div>

            }
        </div>

        <div class="col-md-12">
            @Html.Action("LichSuDonHang", "Review")
        </div>


    </div>
</div>
