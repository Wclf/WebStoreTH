
@{
    ViewBag.Title = "Liên hệ";
}


<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15"
         style="background-image: url(/Content/assets/images/bg-title-page-2.jpg)">
    <h2 class="tit6 t-center">Liên hệ</h2>
</section>

<section class="section-contact bg1-pattern p-t-90 p-b-113">
    <div class="container">
        <div class="map bo8 bo-rad-10 of-hidden">
            <div class="contact-map size37" id="google_map" data-map-x="21" data-map-y="106" data-scrollwhell="0" data-draggable="1"></div>
        </div>
    </div>
    <div class="container">
        <h3 class="tit7 t-center p-b-62 p-t-105">Gửi chúng tôi lời nhắn</h3>
        <form class="wrap-form-reservation size22 m-l-r-auto">
            <div class="row">
                <div class="col-md-4">
                    <span class="txt9"> Tên </span>
                    <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                        <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" name="name" placeholder="Tên" />
                    </div>
                </div>
                <div class="col-md-4">
                    <span class="txt9"> Email </span>
                    <div class="wrap-inputemail size12 bo2 bo-rad-10 m-t-3 m-b-23">
                        <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" name="email"
                               placeholder="Email" />
                    </div>
                </div>
                <div class="col-md-4">
                    <span class="txt9"> Số điện thoại </span>
                    <div class="wrap-inputphone size12 bo2 bo-rad-10 m-t-3 m-b-23">
                        <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" name="phone"
                               placeholder="Số điện thoại" />
                    </div>
                </div>
                <div class="col-12">
                    <span class="txt9"> Lời nhắn </span>
                    <textarea class="bo-rad-10 size35 bo2 txt10 p-l-20 p-t-15 m-b-10 m-t-3" name="message"
                              placeholder="Lời nhắn"></textarea>
                </div>
            </div>
            <div class="wrap-btn-booking flex-c-m m-t-13">
                <button type="submit" class="btn3 flex-c-m size36 txt11 trans-0-4">
                    Gửi
                </button>
            </div>
        </form>
        <div class="row p-t-135">
            <div class="col-sm-8 col-md-4 col-lg-4 m-l-r-auto p-t-30">
                <div class="dis-flex m-l-23">
                    <div class="p-r-40 p-t-6">
                        <img src="~/Content/assets/images/icons/map-icon.png" alt="IMG-ICON" />
                    </div>
                    <div class="flex-col-l">
                        <span class="txt5 p-b-10"> Vị trí </span>
                        <span class="txt23 size38">
                            166 Nguyễn Thái Học, P. Quang Trung, TP. Vinh, Nghệ An
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-sm-8 col-md-3 col-lg-4 m-l-r-auto p-t-30">
                <div class="dis-flex m-l-23">
                    <div class="p-r-40 p-t-6">
                        <img src="images/icons/phone-icon.png" alt="IMG-ICON" />
                    </div>
                    <div class="flex-col-l">
                        <span class="txt5 p-b-10"> Gọi cho chúng tôi </span>
                        <span class="txt23 size38"> 1800 545 440 </span>
                    </div>
                </div>
            </div>
            <div class="col-sm-8 col-md-5 col-lg-4 m-l-r-auto p-t-30">
                <div class="dis-flex m-l-23">
                    <div class="p-r-40 p-t-6">
                        <img src="~/Content/assets/images/icons/clock-icon.png" alt="IMG-ICON" />
                    </div>
                    <div class="flex-col-l">
                        <span class="txt5 p-b-10"> Giờ mở cửa </span>
                        <span class="txt23 size38">
                            09:30 AM – 11:00 PM <br />Hàng ngày
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAKFWBqlKAGCeS1rMVoaNlwyayu0e0YRes"></script>
    <script src="~/Content/assets/js/map-custom.js"></script>
}

